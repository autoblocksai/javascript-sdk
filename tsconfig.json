{
  "include": ["src", "test"],
  "exclude": ["node_modules/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  }
}
